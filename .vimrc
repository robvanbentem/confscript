colorscheme darkblue
set background=dark

syntax on
filetype plugin on
filetype indent on

set number

set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

set autoread
set ruler
set cmdheight=2

set ignorecase
set smartcase
set hlsearch
set incsearch

set showmatch
set mat=2

set ffs=unix,dos,mac
set encoding=utf8

set nobackup
set nowb
set noswapfile

set laststatus=2
set statusline=\ %F%m%r%h\ %w\ \ CWD:\ %r%{getcwd()}%h\ \ \ Line:\ %l

set lbr
set tw=500

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines
